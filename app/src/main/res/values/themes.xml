<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Base.Theme.CoworkingIllini" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colors -->
        <item name="android:windowBackground">#FFFDFB</item>
        <item name="android:colorBackground">#FFFDFB</item>
        <item name="colorOnBackground">#725C39</item>
        <item name="colorSurface">#FEE8C4</item>
        <item name="colorOnSurface">#725C39</item>
        <item name="colorOnSurfaceVariant">#B19669</item>
        <item name="colorPrimary">#FF9D00</item>
        <item name="colorPrimaryVariant">#E4782F</item>
        <item name="colorOnPrimary">#FFFFFF</item>
    </style>

    <style name="Supertitle" parent="Theme.CoworkingIllini">
        <item name="android:fontFamily">@font/playfairdisplay_semibold</item>
        <item name="fontFamily">@font/playfairdisplay_semibold</item>
        <item name="android:textSize">48sp</item>
    </style>
    <style name="Title" parent="Theme.CoworkingIllini">
        <item name="android:fontFamily">@font/playfairdisplay_semibold</item>
        <item name="fontFamily">@font/playfairdisplay_semibold</item>
        <item name="android:textSize">32sp</item>
    </style>
    <style name="Body" parent="Theme.CoworkingIllini">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textSize">23sp</item>
    </style>
    <style name="Chip" parent="Theme.CoworkingIllini">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Heading" parent="Theme.CoworkingIllini">
        <item name="android:fontFamily">@font/playfairdisplay_medium</item>
        <item name="fontFamily">@font/playfairdisplay_medium</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="HeadingEmphasis" parent="Theme.CoworkingIllini">
        <item name="android:fontFamily">@font/playfairdisplay_semibold</item>
        <item name="fontFamily">@font/playfairdisplay_semibold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="PrimaryColorButton" parent="Theme.CoworkingIllini">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAppearance">@style/Body</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextInput" parent="Theme.CoworkingIllini">
        <item name="android:background">@drawable/text_input</item>
        <item name="android:textColorHint">?attr/colorOnSurfaceVariant</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textAppearance">@style/Body</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="Spinner" parent="Theme.CoworkingIllini">
        <item name="android:background">@drawable/text_input</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:spinnerStyle">@style/SpinnerText</item>
        <item name="android:spinnerItemStyle">@style/SpinnerText</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDown</item>
    </style>
    <style name="SpinnerText" parent="Theme.CoworkingIllini" >
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textAppearance">@style/Title</item>
    </style>
    <style name="SpinnerDropDown" parent="Theme.CoworkingIllini" >
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textAppearance">@style/Title</item>
        <item name="android:background">?attr/colorSurface</item>
    </style>
    <style name="ChipStyle" parent="Theme.CoworkingIllini" >
        <item name="android:background">@drawable/chip</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textAppearance">@style/Chip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="Theme.CoworkingIllini" parent="Base.Theme.CoworkingIllini" />
</resources>