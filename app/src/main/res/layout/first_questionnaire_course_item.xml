<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="391dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/first_questionnaire_skills_button_selected"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/first_questionnaire_course_lhs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
        >
            <ImageView
                android:id="@+id/first_questionnaire_course_delete_image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/delete"/>
            <Space
                android:layout_width="4dp"
                android:layout_height="0dp"
            />
            <Button
                android:id="@+id/first_questionnaire_course_name_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CS465"
                android:textColor="?attr/colorOnSurface"
                android:background="@android:color/transparent"
                style="@style/Body"
                android:padding="0dp"
                android:minWidth="0dp"
            />
        </LinearLayout>

        <Button
            android:id="@+id/first_questionnaire_course_goal_button"
            android:background="@drawable/first_questionnaire_skills_button_select_goals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Select Goals"
            android:layout_alignParentRight="true"
            style="@style/Chip"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/bottomText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Chip"
        android:textColor="?attr/colorOnSurface"
        android:paddingTop="12dp"
        android:layout_marginStart="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android" />

</LinearLayout>