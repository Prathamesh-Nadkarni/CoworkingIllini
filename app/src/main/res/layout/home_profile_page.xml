<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFDFB">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF3E0"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:strokeWidth="0dp"
                android:id="@+id/profile_demographic_card"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/profile_icon_on_card"
                        android:id="@+id/profile_photo"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Black Dog"
                        android:id="@+id/profile_name"
                        android:textColor="#725C39"
                        style="@style/Title"/>

                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:chipStrokeColor="#725C39"
                            android:text="Sophmore"
                            android:id="@+id/batch_year"
                            style="@style/Chip"/>
                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:chipStrokeColor="#725C39"
                            android:text="Female"
                            android:id="@+id/gender"
                            style="@style/Chip"/>
                    </com.google.android.material.chip.ChipGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Courses:"
                    android:textColor="#725C39"
                    style="@style/Body"/>

                <com.google.android.material.chip.ChipGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:chipSpacing="2dp"
                    style="@style/Chip">

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipBackgroundColor="#FFFDFB"
                        app:chipStrokeColor="#725C39"
                        app:chipStrokeWidth="0dp"
                        app:textStartPadding="1dp"
                        app:textEndPadding="1dp"
                        app:chipStartPadding="0dp"
                        app:chipEndPadding="0dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        style="@style/Body"
                        android:text="CS 124:"
                        />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipBackgroundColor="#FFFDFB"
                        app:chipStrokeColor="#725C39"
                        app:chipStrokeWidth="1dp"
                        app:textStartPadding="1dp"
                        app:textEndPadding="1dp"
                        app:chipStartPadding="2dp"
                        app:chipEndPadding="2dp"
                        style="@style/Body"
                        android:textSize="14dp"
                        android:text="Struggler" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipBackgroundColor="#FFFDFB"
                        app:chipStrokeColor="#725C39"
                        app:chipStrokeWidth="1dp"
                        app:textStartPadding="1dp"
                        app:textEndPadding="1dp"
                        app:chipStartPadding="2dp"
                        app:chipEndPadding="2dp"
                        style="@style/Body"
                        android:textSize="14dp"
                        android:text="Exam Prepper" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipBackgroundColor="#FFFDFB"
                        app:chipStrokeColor="#725C39"
                        app:chipStrokeWidth="1dp"
                        app:textStartPadding="1dp"
                        app:textEndPadding="1dp"
                        app:chipStartPadding="2dp"
                        app:chipEndPadding="2dp"
                        style="@style/Body"
                        android:textSize="14dp"
                        android:text="Answer Checker" />

                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:dividerColor="#725C39"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Skills:"
                    android:textColor="#725C39"
                    style="@style/Body"/>

                <com.google.android.material.chip.ChipGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:chipSpacing="2dp"
                    style="@style/Chip">

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipBackgroundColor="#FFFDFB"
                        app:chipStrokeColor="#725C39"
                        app:chipStrokeWidth="1dp"
                        app:textStartPadding="1dp"
                        app:textEndPadding="1dp"
                        app:chipStartPadding="2dp"
                        app:chipEndPadding="2dp"
                        style="@style/Body"
                        android:textSize="14dp"
                        android:text="Full Stack Development" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipBackgroundColor="#FFFDFB"
                        app:chipStrokeColor="#725C39"
                        app:chipStrokeWidth="1dp"
                        app:textStartPadding="1dp"
                        app:textEndPadding="1dp"
                        app:chipStartPadding="2dp"
                        app:chipEndPadding="2dp"
                        style="@style/Body"
                        android:textSize="14dp"
                        android:text="Python" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipBackgroundColor="#FFFDFB"
                        app:chipStrokeColor="#725C39"
                        app:chipStrokeWidth="1dp"
                        app:textStartPadding="1dp"
                        app:textEndPadding="1dp"
                        app:chipStartPadding="2dp"
                        app:chipEndPadding="2dp"
                        style="@style/Body"
                        android:textSize="14dp"
                        android:text="Excel" />

                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:dividerColor="#725C39"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:layout_marginTop="16dp">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="12dp"
                    app:strokeWidth="0dp">
                    <LinearLayout
                        android:id="@+id/loudness_component"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp"
                        android:background="#FEE8C4">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/loudness_icon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Loudness: 4"
                            style="@style/Body"
                            android:textSize="18sp"
                            android:textColor="#725C39"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="12dp"
                    app:strokeWidth="0dp">
                    <LinearLayout
                        android:id="@+id/study_pace_component"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp"
                        android:background="#FEE8C4">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/directions_run"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Study Pace: 3"
                            style="@style/Body"
                            android:textSize="18sp"
                            android:textColor="#725C39"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="12dp"
                    app:strokeWidth="0dp">
                    <LinearLayout
                        android:id="@+id/team_preference_component"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp"
                        android:background="#FEE8C4">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/team_preference_icon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Team : 6"
                            style="@style/Body"
                            android:textSize="18sp"
                            android:textColor="#725C39"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#FFF3E0"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="12dp"
                    app:strokeWidth="0dp">
                    <LinearLayout
                        android:id="@+id/cram_component"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp"
                        android:background="#FEE8C4">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/cram_icon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cram: 8"
                            style="@style/Body"
                            android:textSize="18sp"
                            android:textColor="#725C39"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </GridLayout>
        </LinearLayout>
    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FF9D00"
        app:itemIconTint="#FFFDFB"
        app:itemIconSize="40dp"
        app:itemTextColor="#FFFDFB"
        app:menu="@menu/bottom_navigation_menu"/>
</RelativeLayout>