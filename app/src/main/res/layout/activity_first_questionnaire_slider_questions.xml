<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".FirstQuestionnaireSliderQuestionsActivity"

    android:id="@+id/first_questionnaire_slider_questions_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/first_questionnaire_slider_questions_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/first_questionnaire_arrow_back"
            android:clickable="true"
            android:focusable="true"
            app:tint="?attr/colorOnBackground"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <TextView
            android:id="@+id/first_questionnaire_slider_questions_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Sign-Up"
            android:textColor="?attr/colorOnBackground"
            style="@style/Title" />
    </RelativeLayout >

    <TextView
        android:id="@+id/first_questionnaire_slider_questions_txtview_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="20dp"
        android:text="Question"
        android:textColor="?attr/colorOnBackground"
        style="@style/Heading"  />

    <ImageView
        android:id="@+id/first_questionnaire_slider_questions_imgview_1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="50dp"
        app:tint="?attr/colorOnBackground"
        app:srcCompat="@drawable/volume_up" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/first_questionnaire_slider_questions_txtview_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Left Extreme"
            android:layout_gravity="bottom"
            android:gravity="left"
            android:textColor="?attr/colorOnBackground"
            style="@style/Body"
            android:paddingStart="10dp"/>

        <TextView
            android:id="@+id/first_questionnaire_slider_questions_txtview_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Right Extreme"
            android:gravity="right"
            android:layout_gravity="bottom"
            android:textColor="?attr/colorOnBackground"
            style="@style/Body"
            android:paddingRight="10dp" />

    </LinearLayout>
    <SeekBar
        android:id="@+id/first_questionnaire_slider_questions_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="5"
        android:tickMark="@drawable/first_questionnaire_seekbar_tick_mark"
        android:progressDrawable="@drawable/first_questionnaire_seekbar_custom_progress"
        android:thumb="@drawable/first_questionnaire_seekbar_thumb"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="11">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:layout_marginStart="-2dp"
            android:textColor="?attr/colorOnBackground"
            style="@style/Chip"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1"
            android:textColor="?attr/colorOnBackground"
            style="@style/Chip"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2"
            android:textColor="?attr/colorOnBackground"
            style="@style/Chip"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="3"
            android:textColor="?attr/colorOnBackground"
            style="@style/Chip"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="4"
            android:textColor="?attr/colorOnBackground"
            style="@style/Chip"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="5"
            android:textColor="?attr/colorOnBackground"
            style="@style/Chip"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="6"
            android:textColor="?attr/colorOnBackground"
            style="@style/Chip"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="7"
            android:textColor="?attr/colorOnBackground"
            style="@style/Chip"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="8"
            android:textColor="?attr/colorOnBackground"
            style="@style/Chip"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="9"
            android:layout_marginEnd="-3dp"
            android:textColor="?attr/colorOnBackground"
            style="@style/Chip"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="10"
            android:paddingEnd="-8dp"
            android:textColor="?attr/colorOnBackground"
            style="@style/Chip"/>
    </LinearLayout>

    <Button
        style="@style/PrimaryColorButton"
        android:layout_marginTop="40dp"
        android:id="@+id/first_questionnaire_slider_questions_continue"
        android:text="Continue" />

</LinearLayout>