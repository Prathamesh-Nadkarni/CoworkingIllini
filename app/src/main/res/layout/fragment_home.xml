<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFDFB">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp">
        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/tune"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Profiles"
            android:textColor="#725C39"
            style="@style/Title"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/invitations"
            android:layout_alignParentEnd="true"
            android:src="@drawable/bell"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@id/bottom_navigation"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_below="@id/header"
            android:background="#FFF3E0"
            app:cardCornerRadius="12dp"
            android:id="@+id/profile_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Courses:"
                        android:textColor="#725C39"
                        style="@style/Body"/>

                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipSpacing="2dp"
                        android:id="@+id/course"
                        style="@style/Chip">

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipStrokeColor="#725C39"
                            app:chipStrokeWidth="0dp"
                            app:textStartPadding="1dp"
                            app:textEndPadding="1dp"
                            app:chipStartPadding="0dp"
                            app:chipEndPadding="0dp"
                            android:textStyle="bold"
                            style="@style/Chip"
                            android:text="CS 124:"
                            />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipStrokeColor="#725C39"
                            app:chipStrokeWidth="1dp"
                            app:textStartPadding="1dp"
                            app:textEndPadding="1dp"
                            app:chipStartPadding="2dp"
                            app:chipEndPadding="2dp"
                            style="@style/Chip"
                            android:text="Struggler" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipStrokeColor="#725C39"
                            app:chipStrokeWidth="1dp"
                            app:textStartPadding="1dp"
                            app:textEndPadding="1dp"
                            app:chipStartPadding="2dp"
                            app:chipEndPadding="2dp"
                            style="@style/Body"
                            android:textSize="14dp"
                            android:text="Exam Prepper" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipStrokeColor="#725C39"
                            app:chipStrokeWidth="1dp"
                            app:textStartPadding="1dp"
                            app:textEndPadding="1dp"
                            app:chipStartPadding="2dp"
                            app:chipEndPadding="2dp"
                            style="@style/Chip"
                            android:text="Answer Checker" />

                    </com.google.android.material.chip.ChipGroup>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:dividerColor="#725C39"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Skills:"
                        android:textColor="#725C39"
                        style="@style/Body"/>

                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipSpacing="2dp"
                        android:id="@+id/skills"
                        style="@style/Chip">

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipStrokeColor="#725C39"
                            app:chipStrokeWidth="1dp"
                            app:textStartPadding="1dp"
                            app:textEndPadding="1dp"
                            app:chipStartPadding="2dp"
                            app:chipEndPadding="2dp"
                            style="@style/Chip"
                            android:text="Full Stack Development" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipStrokeColor="#725C39"
                            app:chipStrokeWidth="1dp"
                            app:textStartPadding="1dp"
                            app:textEndPadding="1dp"
                            app:chipStartPadding="2dp"
                            app:chipEndPadding="2dp"
                            style="@style/Chip"
                            android:text="Python" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipStrokeColor="#725C39"
                            app:chipStrokeWidth="1dp"
                            app:textStartPadding="1dp"
                            app:textEndPadding="1dp"
                            app:chipStartPadding="2dp"
                            app:chipEndPadding="2dp"
                            style="@style/Chip"
                            android:text="Excel" />

                    </com.google.android.material.chip.ChipGroup>
                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:dividerColor="#725C39"/>
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="2"
                        android:layout_marginTop="16dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="12dp"
                            app:strokeWidth="0dp">
                            <LinearLayout
                                android:id="@+id/loudness_component"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="8dp"
                                android:background="#FFFDFB">
                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/loudness_icon"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Loudness: 4"
                                    android:id="@+id/loudness_text"
                                    style="@style/Body"
                                    android:textSize="18sp"
                                    android:textColor="#725C39"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="12dp"
                            app:strokeWidth="0dp">
                            <LinearLayout
                                android:id="@+id/study_pace_component"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="8dp"
                                android:background="#FFFDFB">
                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/directions_run"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Study Pace: 3"
                                    android:textSize="18sp"
                                    android:id="@+id/pace_text"
                                    style="@style/Body"
                                    android:textColor="#725C39"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="12dp"
                            app:strokeWidth="0dp">
                            <LinearLayout
                                android:id="@+id/team_preference_component"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="8dp"
                                android:background="#FFFDFB">
                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/team_preference_icon"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Team : 6"
                                    android:textSize="18sp"
                                    android:id="@+id/team_preference_text"
                                    style="@style/Body"
                                    android:textColor="#725C39"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="5dp"
                            app:cardCornerRadius="12dp"
                            app:strokeWidth="0dp">
                            <LinearLayout
                                android:id="@+id/cram_component"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="8dp"
                                android:background="#FFFDFB">
                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/cram_icon"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Cram: 8"
                                    android:textSize="18sp"
                                    style="@style/Body"
                                    android:id="@+id/cram_text"
                                    android:textColor="#725C39"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </GridLayout>
                    </ScrollView>
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/demographic_score_details"
                    android:layout_alignParentBottom="true">

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:fontFamily="sans-serif"
                        android:text="Compatability Score: 75"
                        style="@style/Body"
                        android:id="@+id/compatibility_score"
                        android:textColor="#725C39"/>
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:id="@+id/information_button_compatibility_score"
                        android:src="@drawable/information_icon"
                        android:layout_alignTop="@+id/compatibility_score"
                        android:layout_toEndOf="@id/compatibility_score"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/profile_photo_on_line">
                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            app:dividerColor="#725C39"/>

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_centerInParent="true"
                            android:padding="8dp"
                            android:id="@+id/profile_icon_card"
                            android:src="@drawable/profile_icon_on_card"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/profile_name"
                        android:text="Black Dog"
                        android:fontFamily="sans-serif"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/profile_photo_on_line"
                        android:textColor="#725C39"
                        style="@style/Body"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profile_name"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/gender_profile"
                            android:text="Female,"
                            android:textColor="#725C39"
                            style="@style/Body"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/college_year"
                            android:text="Sophmore"
                            android:textColor="#725C39"
                            style="@style/Body"/>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_alignParentBottom="true">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/close_profile_reject"/>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/check_profile_accept"/>

                </RelativeLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FF9D00"
        app:itemIconTint="#FFFDFB"
        app:itemTextColor="#FFFDFB"
        app:menu="@menu/bottom_navigation_menu"/>
</RelativeLayout>