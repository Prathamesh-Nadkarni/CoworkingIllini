<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chat_main_screen"
    android:background = "#FFFDFB">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FEE8C4"
        android:id="@+id/chat_header">
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/back_arrow_chat_header"
            android:id="@+id/chat_header_back_arrow"
            android:layout_centerVertical="true">
        </ImageButton>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/on_surface_profile_photo"
            android:id="@+id/chat_header_profile_photo"
            android:layout_toRightOf="@+id/chat_header_back_arrow"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:textSize="25sp"
            android:textColor="#725C39"
            android:text="Black Dog"
            style="@style/Heading"
            android:id="@+id/chat_header_profile_name"
            android:layout_toRightOf="@+id/chat_header_profile_photo"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chat_results"
        android:layout_below="@id/chat_header"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="24sp"
            android:textColor="#725C39"
            android:id="@+id/chat_survey_title"
            android:text="Survey Results"
            style="@style/Body"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/chat_survey_title"
            android:layout_marginTop="20dp">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/result_card_question_1"
                app:strokeWidth="0dp"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/result_question_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif"
                        android:textColor="#725C39"
                        android:text="Question 1"
                        style="@style/Body"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif"
                        android:textColor="#725C39"
                        android:id="@+id/your_answer_1"
                        android:text="Your Answer:"
                        style="@style/Body"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:textColor="#725C39"
                        android:id="@+id/their_answer_1"
                        android:text="Their Answer:"
                        style="@style/Body"
                        android:textSize="15sp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/result_card_question_2"
                android:layout_marginBottom="20dp"
                app:strokeWidth="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/result_question_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif"
                        android:textColor="#725C39"
                        android:text="Question 2"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif"
                        android:textColor="#725C39"
                        android:id="@+id/your_answer_2"
                        android:text="Your Answer:"
                        style="@style/Body"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:textColor="#725C39"
                        android:id="@+id/their_answer_2"
                        android:text="Their Answer:"
                        style="@style/Body"
                        android:textSize="15sp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/result_card_question_3"
                app:strokeWidth="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/result_question_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif"
                        android:textColor="#725C39"
                        android:text="Question 3"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif"
                        android:textColor="#725C39"
                        android:id="@+id/your_answer_3"
                        android:text="Your Answer:"
                        style="@style/Body"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:textColor="#725C39"
                        android:id="@+id/their_answer_3"
                        android:text="Their Answer:"
                        style="@style/Body"
                        android:textSize="15sp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </RelativeLayout>
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat_button"
        android:layout_below="@+id/chat_results"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:backgroundTint="#FFFDFB"
        app:cornerRadius="10dp"
        app:strokeColor="#725C39"
        app:strokeWidth="2dp"
        android:textColor="#725C39"
        android:text="Let's Chat"
        android:textSize="24sp"
        style="@style/Title">
    </com.google.android.material.button.MaterialButton>
</RelativeLayout>