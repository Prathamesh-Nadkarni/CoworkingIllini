<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFDFB">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/requests_header"
        android:layout_margin="10dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/back_arrow_chat_header"
            android:id="@+id/chat_header_back_arrow"
            android:layout_centerVertical="true">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:textSize="30dp"
            android:textColor="#725C39"
            android:text="Invitations"
            android:id="@+id/chat_header_profile_name"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/requests_header"
        android:id = "@+id/requests_status_navigation"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#725C39"
            android:fontFamily="serif"
            android:textSize="25dp"
            android:id="@+id/recieved"
            android:text="Recieved"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="150dp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#725C39"
            android:fontFamily="serif"
            android:textSize="25dp"
            android:id="@+id/sent"
            android:layout_toRightOf="@+id/recieved"
            android:text="Sent">
        </TextView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profiles_status"
        android:layout_below = "@+id/requests_status_navigation">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/sent_layout"
            android:layout_marginTop="30dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/profile_1">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/profile_icon_on_background"
                    android:id="@+id/profile_icon_1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blue Dolphin"
                    android:id="@+id/profile_name_1"
                    android:textSize="20dp"
                    android:textColor="#725C39"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/profile_icon_1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/status_accepted"
                    android:background="@drawable/status_background_accepted"
                    android:fontFamily="serif"
                    android:text="Accepted"
                    android:textSize="18dp"
                    android:padding="10dp"
                    android:textColor="#FEE8C4"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/profile_2">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/profile_icon_on_background"
                    android:id="@+id/profile_icon_2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Black Dog"
                    android:id="@+id/profile_name_2"
                    android:textSize="20dp"
                    android:textColor="#725C39"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/profile_icon_2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/status_rejected"
                    android:background="@drawable/status_background_rejected"
                    android:fontFamily="serif"
                    android:text="Rejected"
                    android:textSize="18dp"
                    android:padding="10dp"
                    android:textColor="#725C39"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FF9D00"
        app:itemIconTint="#FFFDFB"
        app:itemTextColor="#FFFDFB"
        app:menu="@menu/bottom_navigation_menu"/>
</RelativeLayout>